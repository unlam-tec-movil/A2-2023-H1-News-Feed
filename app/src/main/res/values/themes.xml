<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobile2_Scaffolding" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/status_bar_color</item>
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/status_bar_color</item>
        <item name="colorSecondaryVariant">@color/status_bar_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Mobile2_Scaffolding.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mobile2_Scaffolding.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mobile2_Scaffolding.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- splash para inicio de pantalla-->
    <style name="Theme.App.SplashScreen" parent ="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FF393939</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/clima</item>
        <item name="postSplashScreenTheme">@style/Theme.Mobile2_Scaffolding.NoActionBar</item>
    </style>
</resources>